{
  "display_information": {
    "name": "Alert Bridge",
    "description": "Alertmanager integration with bidirectional ack sync",
    "background_color": "#dc3545"
  },
  "features": {
    "bot_user": {
      "display_name": "Alert Bridge",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/alert-status",
        "url": "https://alert-bridge.example.com/webhook/slack/commands",
        "description": "Check current alert status",
        "usage_hint": "[critical|warning|info]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "commands"
      ]
    }
  },
  "settings": {
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://alert-bridge.example.com/webhook/slack/interactions"
    },
    "event_subscriptions": {
      "request_url": "https://alert-bridge.example.com/webhook/slack/events",
      "bot_events": [
        "app_mention"
      ]
    },
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
