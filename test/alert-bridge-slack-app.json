{
  "display_information": {
    "name": "Alert Bridge",
    "description": "Alertmanager integration with bidirectional ack sync",
    "background_color": "#dc3545",
    "long_description": "Alert Bridge is a unified alert management system that bridges Alertmanager with Slack and PagerDuty, enabling bidirectional acknowledgment synchronization and persistent alert storage."
  },
  "features": {
    "bot_user": {
      "display_name": "Alert Bridge",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/silence",
        "url": "https://bad64cdf62b9.ngrok-free.app/webhook/slack/commands",
        "description": "Create or manage alert silences",
        "usage_hint": "[create|list|delete] [options]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "channels:read",
        "channels:history",
        "groups:read",
        "commands",
        "app_mentions:read",
        "users:read"
      ]
    }
  },
  "settings": {
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://bad64cdf62b9.ngrok-free.app/webhook/slack/interactions"
    },
    "event_subscriptions": {
      "request_url": "https://bad64cdf62b9.ngrok-free.app/webhook/slack/events",
      "bot_events": [
        "app_mention",
        "message.channels"
      ]
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
